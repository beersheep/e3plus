<!--choose course-->
<div class="form-group">
    <%= f.label :course, "課程" %>
    <%= f.collection_select(:course_id, @courses, :id, :name, {include_blank: true} ) %>
</div>

<!--choose tag-->
<div class="form-group">
    <%= f.label :tag, "標籤" %>
    <%= f.collection_select(:tag_id, Tag.all, :id, :name ) %>
</div>

<!--input topic-->
<div class="form-group">
    <%= f.label :topic, "標題" %>
    <%= f.text_field :topic, class: "form-control" %>
</div>

<!--input content-->
<div class="form-group">
    <%= f.label :content, "公告內容" %>
    <%= f.text_area :content, class: "form-control", rows: "7" %>
</div>

<div class="form-group">
    <%= f.label :content, "截止時間" %>
    <%= f.date_field :deadline %>
</div>
<p style="color: red"><%= flash[:notice] %></p>