<!DOCTYPE html>
<html>
    <head>
        <title>E3plus</title>
		<!-- add stylesheet at app/assets/stylesheets/style_main.css -->
		<%= stylesheet_link_tag "main" %>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'calendar.css' %>
		<!-- add javascript at app/assets/javascript/script_main.js -->
		<%= javascript_include_tag "main" %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
    </head>
    <body>
			<div id="wrapper">

        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">

            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <span class="navbar-brand"><%= link_to '回首頁', :student_index %></span>
            </div>

            <!-- Top Menu Items -->
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to '登出', :login_logout %></li>
              <li><%= link_to '行事曆', :student_calendar %></li>
              <li><a href="#">作業清單</a></li>
            </ul>

            <!-- Sidebar Menu Items - This collapse when window is small -->
            <div class="collapse navbar-collapse navbar-ex1-collapse" id="bs-example-navbar-collapse-1">
              <!--list all courses and their links-->
              <ul class="nav side-nav">
                <% @courses.each do |course| %>
                <li><%= link_to course.name, controller: 'student', action: 'course', id: course.id %></li>
                <% end %>
              </ul>
            </div><!-- /.navbar-collapse -->

        </nav>

				<!-- page content -->
				<div id="page-wrapper">
          <%= yield %>
				</div> <!-- page-wrapper -->

			</div><!-- wraper -->
    </body>
</html>
