<!--the templete of this page is at app/views/layouts/student.html.erb-->
<div class="container-fluid">

	<!-- page header -->	
	<div class="row">
 		<div class="col-lg-12">
			<h2 class="page-header"><%= @course.name %></h2>
		</div>
	</div>

	<!-- content nav -->
	<ul class="nav nav-tabs">
	  <li class="active"><a href="#home" data-toggle="tab" aria-expanded="false">公告</a></li>
		<li class=""><a href="#assignment" data-toggle="tab" aria-expanded="true">作業</a></li>
		<li class=""><a href="#exam" data-toggle="tab" aria-expanded="true">考試</a></li>
	</ul>
	
	<!-- page content -->
	<div id="myTabContent" class="tab-content">

		<div class="tab-pane fade active in" id="home">
			<div class="jumbotron content_block" style="overflow: scroll;">
				<!--list all announces-->
				<%= render partial: 'announces/all', locals: { announces: @announces } %>
			</div>
		</div>

		<div class="tab-pane fade" id="assignment">
			<div class="jumbotron content_block" style="overflow: scroll;">
				<!--list announces with homework tag-->
				<%= render partial: 'announces/all', locals: { announces: @homeworks } %>
			</div>
		</div>

		<div class="tab-pane fade" id="exam">
			<div class="jumbotron content_block" style="overflow: scroll;">
				<!--list announces with exam tag-->
				<%= render partial: 'announces/all', locals: { announces: @exams } %>
			</div>
		</div>
		
	</div>
</div>
